<div class="container pt-4">
  <h2>Edit article</h2>
  <%= form_for(@article) do |f| %>
    <div class="form py-3">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class:"form-control"%>
      </div>
      <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class:"form-control"%>
      </div>
      <%= f.submit :submit, class:"btn btn-primary mt-3"%>
    </div>
  <% end %>
</div>
